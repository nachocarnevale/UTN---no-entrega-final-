  </div>
</div>

<div class="row wrapp">
  <div class="table-responsive">
    <table class="table">
      <thead class="thead">
        <tr class="listado">
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Equipo</th>
          <th scope="col">Liga</th>
          <th scope="col">Temporada</th>
          <th scope="col">Imagen</th>
        </tr>
