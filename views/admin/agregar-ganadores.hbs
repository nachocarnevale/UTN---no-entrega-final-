<div class="container" style="margin:100px auto">
   <div class="row">
       <div class="col-6 offset-3">
           <h4 style="color:white; margin-bottom:3%;">Agregar un ganador:</h4>
           <form action="/admin/novedades/agregar-ganadores" method="post" enctype="multipart/form-data">
              <div class="form-group">
                  <input type="text" class="form-control"
                  placeholder="Nombre" name="nombre">
              </div>
              <div class="form-group">
                  <textarea type="text" class="form-control"
                  placeholder="Apellido" name="apellido"></textarea>
              </div>
              <div class="form-group">
                  <textarea type="text"class="form-control"
                  placeholder="Equipo" name="equipo"></textarea>
              </div>
              <div class="form-group">
                  <textarea type="text"class="form-control"
                  placeholder="Liga" name="liga"></textarea>
              </div>
              <div class="form-group">
                  <textarea type="text"class="form-control"
                  placeholder="Temporada" name="temporada"></textarea>
              </div>
              <div class="form-group">
                <label>Imagen: <input type="file" class="form-group" name="imagen" id="imagen"></label>
              </div>
              <button type="submit" class="btn btn-primary">Guardar</button>
            </form> 
            {{#if error}}
                <p style="color:white;">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>