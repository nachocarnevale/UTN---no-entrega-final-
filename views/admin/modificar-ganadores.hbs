<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">

<div class="row wrapp" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Ganadores</h4>
            <form action="/admin/novedades/modificar-ganadores" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control"
                    name="nombre" value="{{novedad.nombre}}">
                </div>
                <div class="form-group">
                    <label for="">Apellido</label>
                    <input type="text" class="form-control"
                    name="apellido" value="{{novedad.apellido}}">
                </div>
                <div class="form-group">
                    <label for="">Equipo</label>
                    <textarea name="email" class="form-control">{{novedad.equipo}}</textarea>
                </div>
                <div class="form-group">
                    <label for="">Liga</label>
                    <textarea name="liga" class="form-control">{{novedad.liga}}</textarea>
                </div>
                <div class="form-group">
                    <label for="">Temporada</label>
                    <textarea name="temporada" class="form-control">{{novedad.temporada}}</textarea>
                </div>
                
                <div class="form-group">
                    <p>
                        <label> Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Â¿Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <button type="submit"class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p style="color:white;">{{message}}</p>
            {{/if}}
        </div>
    </div>  
</div>  